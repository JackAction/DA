<UserControl x:Class="MainApplication.Left_UC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MainApplication"
             xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
             mc:Ignorable="d" 
             d:DesignHeight="400" d:DesignWidth="150">
    <UserControl.Resources>
        <Style x:Key="buttonStyle" TargetType="Button">
            <Setter Property="Width" Value="40" />
            <Setter Property="VerticalAlignment" Value="Center" />
        </Style>

        <Style x:Key="listStyle">
            <Setter Property="Control.Margin" Value="10"/>
        </Style>
    </UserControl.Resources>

    <Grid DataContext="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type local:Left_UC}}}">
        <Grid.RowDefinitions>
            <RowDefinition />
            <!-- rest of the bar -->
            <RowDefinition Height="182"/>
            <!-- Button 1 -->
            <!-- empty space -->
            <!-- Button 2 -->
            <!-- empty space -->
            <RowDefinition Height="74" />
            <!-- Button 3 -->
            <RowDefinition />
            <!-- rest of the bar -->
        </Grid.RowDefinitions>
        <xctk:CheckListBox Margin="10,0,0,0" Grid.Row="1"
                           DisplayMemberPath="Name"
                           SelectedMemberPath="IsSelected"
                           ItemsSource="{Binding Layers}"
                           Background="{x:Null}" BorderThickness="0" ItemContainerStyle="{DynamicResource listStyle}" />
        <Button x:Name="delete" Command="{Binding DeleteLayers}" Style="{StaticResource buttonStyle}" Content="Delete" Grid.Row="2" Margin="9,18,101,36" Height="20"  />
        <Button x:Name="add" Command="{Binding AddLayer}" Style="{StaticResource buttonStyle}" Content="Add" Grid.Row="2" Margin="57,18,53,36" Height="20" />
        <Button x:Name="edit" Command="{Binding EditLayer}" Style="{StaticResource buttonStyle}" Content="Edit" Grid.Row="2" Margin="104,18,6,36" Height="20" />
        <TextBox x:Name="layerName" HorizontalAlignment="Left" Height="23" Margin="14,43,0,0" Grid.Row="2" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>


    </Grid>
</UserControl>
