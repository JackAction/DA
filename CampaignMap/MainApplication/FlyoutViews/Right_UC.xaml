<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MainApplication"
             xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit" x:Class="MainApplication.Right_UC"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="300">
    <Grid DataContext="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type local:Right_UC}}}">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <!-- rest of the bar -->
            <RowDefinition Height="529"/>
            <!-- mode selection -->
            <!-- map element properties -->
            <RowDefinition Height="*" />
            <!-- rest of the bar -->
        </Grid.RowDefinitions>
        <TabControl x:Name="tabControl" Grid.Row="1" Background="{x:Null}">
            <TabItem Header="Draw">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <!-- rest of the bar -->
                        <RowDefinition Height="107"/>
                        <!-- mode selection -->
                        <RowDefinition Height="255" />
                        <!-- map element properties -->
                        <RowDefinition Height="*" />
                        <!-- rest of the bar -->
                    </Grid.RowDefinitions>
                    <local:MapElementProperties_UC Grid.Row="2" 
                        Layers="{Binding Layers}"
                        SelectedLayers="{Binding LayersForNewStroke}" 
                        SelectedMemberPath="IsSelectedForNewStroke"
                        DrawingAttributes="{Binding DefaultDrawingAttributes}" />
                </Grid>
            </TabItem>
            <TabItem Header="Select">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <!-- rest of the bar -->
                        <RowDefinition Height="107"/>
                        <!-- mode selection -->
                        <RowDefinition Height="295" />
                        <!-- map element properties -->
                        <RowDefinition Height="*" />
                        <!-- rest of the bar -->
                    </Grid.RowDefinitions>
                    <local:MapElementProperties_UC Grid.Row="2"
                        LayerChanged ="{Binding LayerChanged}"
                        Layers="{Binding Layers}"
                        SelectedLayers="{Binding LayersOfSelectedStroke}" 
                        SelectedMemberPath="IsSelectedInExistingStroke"
                        DrawingAttributes="{Binding DrawingAttributesOfSelectedStroke}" />
                </Grid>
            </TabItem>
        </TabControl>

    </Grid>
</UserControl>
